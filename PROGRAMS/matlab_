CODE-2

% PLOTING OF CURVES AND SURFACES
clc
clear all
close all
t = linspace(0, 2*pi,20);
x = 3+2*cos(t);
y = 4+2*sin(t);
plot(x,y,'r-*') % change r for colour
change
axis equal
xlabel('x(m)')
ylabel('y(m)')
title('graph of (x-1)^2+(y-3)^2=4')
legend('(x-1)^2+(y-3)^2=4')

CODE 3:

%MULTIPLE PLOTS IN A FIGURE WINDOW (USING
COMMAND HOLD LINE)
clc
clear all
close all
x = linspace(0,1)
plot(x,x.^2,'r*')
hold on
plot(x,sin(x),'g.')
plot(x,exp(x),'m+')
legend('x^2','sin(x)','exp(x)')


CODE 4:-
% MULTIPLE GRAPHS IN A FIGURE WINDOW BY USING
SUBPLOT
clc
clear all
close all
x=0:0.1:2*pi;
subplot(2,2,1)
plot(x,sin(x));
subplot(2,2,2)
plot(x,cos(x),'r-*');
subplot(2,2,3)
plot(x,exp(-x),'go')
subplot(2,2,4)
plot(x,sin(3*x),'ms')


